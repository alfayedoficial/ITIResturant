<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--	 color error textinputlayout-->
    <style name="textinputlayoutErrorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/color7</item>
<!--        <item name="android:fontFamily">@font/boutfont</item>-->
        <!--		  <item name="android:textSize">10sp</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:strokeColor">@color/colorheavy</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:actionMenuTextColor">@color/white</item>

    </style>

</resources>
